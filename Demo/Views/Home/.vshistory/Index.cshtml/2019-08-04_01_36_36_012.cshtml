@{
	ViewData["Title"] = "spartan-multi-image-picker";
	Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<title>spartan-multi-image-picker</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
</head>
<body>
	<div class="row">
		<div id="coba"></div>
	</div>

	<script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
	<script src="~/lib/Multiple-Image-Picker-jQuery-Spartan/dist/js/spartan-multi-image-picker.js"></script>

	<script>
		$(function () {

			$("#coba").spartanMultiImagePicker({
				fieldName: 'fileUpload[]'
			});

			$("#coba").spartanMultiImagePicker({
				fieldName:        'fileUpload[]',
				maxCount:         5,
				rowHeight:        '200px',
				groupClassName:   'col-md-4 col-sm-4 col-xs-6',
				allowedExt:       'png|jpg',
				dropFileLabel:    "Drop Here",
				placeholderImage: {
					image: 'placeholder.png',
					width: '100%'
				},
				onAddRow:       function(index){
					console.log(index);
					console.log('add new row');
				},
				onRenderedPreview : function(index){
					console.log(index);
					console.log('preview rendered');
				},
				onRemoveRow : function(index){
					console.log(index);
					console.log('remove row');
				},
				onExtensionErr : function(index, file){
					console.log(index, file);
					alert('Please only input png or jpg type file');
				},
				onSizeErr : function(index, file){
					console.log(index, file);
					alert('File size too big');
				}
			});

			$("#coba").spartanMultiImagePicker({
				fieldName:  'fileUpload[]',
				directUpload : {
					status: true, // activate direct upload
					loaderIcon: '<i class="fas fa-sync fa-spin"></i>',
					url:       'c.php',
					additionalParam : {
						name : 'My Name'
					},
					success : function(data, textStatus, jqXHR){
					},
					error : function(jqXHR, textStatus, errorThrown){
					}
				}
			});

		});
	</script>
</body>
</html>